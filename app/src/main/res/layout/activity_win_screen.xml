<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="frogger.WinScreen">

    <TextView
        android:id="@+id/congrats"
        android:layout_width="521dp"
        android:layout_height="206dp"
        android:layout_marginStart="213dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="212dp"
        android:text="Congrats!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/youwin"
        android:layout_width="525dp"
        android:layout_height="177dp"
        android:layout_marginStart="254dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="254dp"
        android:text="You Win!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congrats"
        tools:text="You Win!" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="377dp"
        android:layout_height="155dp"
        android:text="Score:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/gray_600"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="656dp"
        tools:text="Score:" />

    <TextView
        android:id="@+id/scoreDisplay"
        android:layout_width="231dp"
        android:layout_height="155dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="48dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/restart"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/restart"
        android:layout_width="318dp"
        android:layout_height="122dp"
        android:layout_marginStart="291dp"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="30dp"
        android:text="Restart"
        android:onClick="onRestartGame"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Restart" />

    <Button
        android:id="@+id/exit"
        android:layout_width="318dp"
        android:layout_height="122dp"
        android:layout_marginStart="291dp"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="147dp"
        android:text="Exit"
        android:onClick="onExitGame"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Exit" />
</androidx.constraintlayout.widget.ConstraintLayout>